<Window x:Class="uklady.canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uklady"
        mc:Ignorable="d"
        Title="canvas" Height="450" Width="800">
    <Canvas>
        <Button Canvas.Top="1" Content="button" FontSize="40"/>
        <Button Canvas.Bottom="1" Content="button" FontSize="40"/>
        <Button Canvas.Right="1" Content="button" FontSize="40"/>
        <Button Canvas.Right="1" Canvas.Bottom="1" Content="button" FontSize="40"/>
    </Canvas>
</Window>
