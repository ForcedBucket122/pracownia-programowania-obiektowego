<Window x:Class="ComboBoxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBoxy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel  Margin="20" Orientation="Vertical">
            <ComboBox Margin="20" SelectionChanged="ComboBox_SelectionChanged" x:Name="kolory">
                <ComboBoxItem>
                    <TextBlock Text="Arbuzowy"></TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Turkusowy"></TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Brokułowy"></TextBlock>
                </ComboBoxItem>
            </ComboBox>

            <ComboBox Margin="20">
                <ComboBoxItem>
                    <TextBlock Text="Czarny"></TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Zielony"></TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="biały"></TextBlock>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
