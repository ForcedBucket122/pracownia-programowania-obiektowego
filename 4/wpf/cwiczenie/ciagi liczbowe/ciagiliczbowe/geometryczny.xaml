<Window x:Class="ciagiliczbowe.geometryczny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ciagiliczbowe"
        mc:Ignorable="d"
        Title="geometryczny" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Ciąg geometryczny" FontSize="16" Margin="5"/>

        <TextBlock Text="Pierwszy wyraz:" Margin="5"/>
        <TextBox Name="FirstTermBox" Margin="5"/>

        <TextBlock Text="Iloraz:" Margin="5"/>
        <TextBox Name="RatioBox" Margin="5"/>

        <TextBlock Text="Który wyraz?" Margin="5"/>
        <TextBox Name="IndexBox" Margin="5"/>

        <Button Content="Oblicz" Click="Calculate" Margin="5"/>
        <TextBlock Name="ResultText" FontSize="14" Margin="5"/>
    </StackPanel>
</Window>
