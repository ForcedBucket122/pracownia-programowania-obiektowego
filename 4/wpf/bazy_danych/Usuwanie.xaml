<Window x:Class="bazy_danych.Usuwanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bazy_danych"
        mc:Ignorable="d"
        Title="Usuwanie"  Height="600" Width="1000" Background="#00acac">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <WrapPanel Margin="0,30,0,0">
                <Label Content="Id:" FontSize="20"/>
                <TextBox Name="id" Margin="20,0,0,0" Width="200" FontSize="20"/>
            </WrapPanel>
            <WrapPanel Margin="0,30,0,0">
                <Button Name="usun" Content="Usun ucznia do bazy" FontSize="20" />
                <Button Name="wyswietl" Content="Wyświetl uczniów z  bazy" FontSize="20" Margin="20,0,0,0"/>

            </WrapPanel>
            <WrapPanel Margin="0,30,0,0">
                <DataGrid Name="dataGrid" AutoGenerateColumns="True" Height="300" Background="Cyan" FontSize="25"/>

            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
