<Window x:Class="bazy_danych.Dodawanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bazy_danych"
        mc:Ignorable="d"
        Title="Dodawanie" Height="600" Width="1000" Background="#00acac">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <WrapPanel Margin="0,30,0,0">
                <Label Content="Nazwisko:" FontSize="20"/>
                <TextBox Name="nazwisko" Margin="20,0,0,0" Width="200" FontSize="20"/>
                <Label Content="Imię:" FontSize="20"/>
                <TextBox Name="imie" Margin="20,0,0,0" Width="200" FontSize="20"/>
                <Label Content="Wpłata na RR:" FontSize="20"/>
                <TextBox Name="wplata" Margin="20,0,0,0" Width="150" FontSize="20"/>


            </WrapPanel>
            <WrapPanel Margin="0,30,0,0">
                <Label Content="Klasa:" FontSize="20"/>
                <ComboBox Name="klasa" FontSize="20">
                    <ComboBoxItem>1a</ComboBoxItem>
                    <ComboBoxItem>1b</ComboBoxItem>
                    <ComboBoxItem>1c</ComboBoxItem>
                    <ComboBoxItem>2a</ComboBoxItem>
                    <ComboBoxItem>2b</ComboBoxItem>
                    <ComboBoxItem>2c</ComboBoxItem>
                    <ComboBoxItem>3a</ComboBoxItem>
                    <ComboBoxItem>3b</ComboBoxItem>
                    <ComboBoxItem>3c</ComboBoxItem>
                    <ComboBoxItem>4a</ComboBoxItem>
                    <ComboBoxItem>4b</ComboBoxItem>
                    <ComboBoxItem>4c</ComboBoxItem>
                    <ComboBoxItem>5a</ComboBoxItem>
                    <ComboBoxItem>5b</ComboBoxItem>
                    <ComboBoxItem>5c</ComboBoxItem>


                </ComboBox>

                <Label Content="Wychowawca:" FontSize="20" Margin="20,0,0,0"/>
                <ComboBox Name="wychowawca" FontSize="20">
                    <ComboBoxItem>Jan Tuwim</ComboBoxItem>
                    <ComboBoxItem>Michał Leszko</ComboBoxItem>
                    <ComboBoxItem>Andrzej Heblewski</ComboBoxItem>
                    <ComboBoxItem>Grzegorz Wysocki</ComboBoxItem>
                    <ComboBoxItem>Dorian Barszczu</ComboBoxItem>
                    <ComboBoxItem>Marian Cyper</ComboBoxItem>
                    <ComboBoxItem>Dorian Banino</ComboBoxItem>
                    <ComboBoxItem>Adam Ptak</ComboBoxItem>
                    <ComboBoxItem>Łukasz Szulik</ComboBoxItem>
                    <ComboBoxItem>Kamil Burak</ComboBoxItem>
                    <ComboBoxItem>Michał Bagieta</ComboBoxItem>
                    <ComboBoxItem>Józef Stokłosa</ComboBoxItem>
                    <ComboBoxItem>Piotr Essowicz</ComboBoxItem>
                    <ComboBoxItem>Karol Wojtas</ComboBoxItem>
                    <ComboBoxItem>Arkadiusz Ewrtowski</ComboBoxItem>


                </ComboBox>
            </WrapPanel >
            <WrapPanel Margin="0,30,0,0">
                <Button Name="dodaj" Content="Dodaj ucznia do bazy" FontSize="20" />
                <Button Name="wyswietl" Content="Wyświetl uczniów z  bazy" FontSize="20" Margin="20,0,0,0"/>

            </WrapPanel>
            <WrapPanel Margin="0,30,0,0">
                <DataGrid Name="dataGrid" AutoGenerateColumns="True" Height="300" Background="Cyan" FontSize="25"/>

            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
