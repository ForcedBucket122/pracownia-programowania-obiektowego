<Window x:Class="bazy_danych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bazy_danych"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" Background="#00acac">
    <StackPanel>
        <Button Content="Dodaj ucznia do bazy" x:Name="Dodaj" Width="300" Margin="20" Click="Dodaj_Click"/>
        <Button Content="Wyswietl uczniow z bazy" x:Name="Wyswietl" Width="300" Margin="20" Click="Wyswietl_Click"/>
        <Button Content="Usun ucznia z bazy o podanym id" x:Name="Usun" Width="300" Margin="20" Click="Usun_Click"/>
        <Button Content="Wyszukaj uczniow z bazy" x:Name="Wyszukaj" Width="300" Margin="20" Click="Wyszukaj_Click"/>
    </StackPanel>
</Window>
