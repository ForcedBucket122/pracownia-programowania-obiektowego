<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Icon="/grafika/ikona.ico"
        ResizeMode="NoResize"
        Title="MainWindow" Height="300" Width="350">
    <WrapPanel>
        <Label Content="0" Width="100" x:Name="liczba1" BorderBrush="Black" BorderThickness="1" FontSize="12" Height="25"/>
        <TextBlock Text="*" FontSize="25" Height="25"/>
        <Label Content="0" Width="100" x:Name="liczba2" BorderBrush="Black" BorderThickness="1" FontSize="12" Height="25"/>
        <TextBlock Text="=" FontSize="25" />
        <TextBox Width="100" x:Name="wynik" FontSize="12" Height="25"/>

        <WrapPanel Width="350" Margin="0 10 0 0">
            <Button Content="Losuj" Margin="60 0 0 0" FontSize="25" x:Name="losuj" Click="losuj_Click"/>
            <Button Content="Sprawdź" Margin="60 0 0 0" FontSize="25" x:Name="sprawdz" Click="sprawdz_Click"/>
        </WrapPanel>
        <Image Source="/grafika/pytanie.png"  Width="100" Margin="120 10 0 0" x:Name="zdjecie"/>
        <TextBlock Width="200" x:Name="tekst" Margin="70 10 0 0" FontSize="14"/>
    </WrapPanel>
</Window>